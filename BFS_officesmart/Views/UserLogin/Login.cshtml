<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>登录</title>
    <link href="~/Content/frame/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/frame/static/css/style.css" rel="stylesheet" />
    <img src="~/Content/frame/static/image/code.png" />
</head>
<body class="login-body body">
    <div class="login-box">
        <form class="layui-form layui-form-pane" method="post" action="/UserLogin/GetLogin">
            <div class="layui-form-item">
                <h3>BFS Officesmart后台管理系统</h3>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">@Html.LabelFor(p => p.Name)</label>

                <div class="layui-input-inline">
                    @Html.TextBoxFor(p => p.Password, new { Name = "Name", placeholder = "账号", autocomplete = "on", maxlength = "20", @class = "layui-input" })
                    @*<input type="text" name="Name" class="layui-input" lay-verify="account" placeholder="账号" autocomplete="on" maxlength="20" />*@
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">@Html.LabelFor(p => p.Password)</label>
                <div class="layui-input-inline">
                    @Html.PasswordFor(p => p.Password, new { name = "Password", placeholder = "密码", maxlength = "20", @class = "layui-input" })
                    @*<input type="password" name="Password" class="layui-input" lay-verify="password" placeholder="密码" maxlength="20" />*@
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">验证码：</label>

                <div class="layui-input-inline">
                    <input type="number" name="code" class="layui-input" lay-verify="code" placeholder="验证码" maxlength="4" />
                    <img id="valiCode" src="/UserLogin/GetValidateCode" />
                </div>
            </div>
            <div class="layui-form-item">
                <button type="reset" class="layui-btn layui-btn-danger btn-reset">重置</button>
                <button type="submit" class="layui-btn btn-submit" lay-submit="" lay-filter="sub">立即登录</button>
            </div>
            <label>@Html.ValidationSummary()</label>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript">
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"type="text/javascript"></script>
    <script src="~/Content/frame/layui/layui.js"></script>
    <script>
        $(function () {
            $("#valiCode").bind("click", function () {
                this.src = "/UserLogin/GetValidateCode?time=" + (new Date()).getTime();
            });
        });
    </script>
